/* pages/brandnews/brandnews.wxss */
/**index.wxss**/

.top-container {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;
  background-color: #fff;
}

/* 首页上方搜索框 */
.home .search .search-box {
  width: 96%;
  height: 30px;
  margin: 0 auto 10px auto;
  background-color: #f5f5f5;
}
.home .search .search-box .search-icon {
  display: inline-block;
  position: relative;
  top: -7.5px;
  left: 9px;
  width: 15px;
  height: 15px;
}
.home .search .search-box .search-tip {
  display: inline-block;
  line-height: 30px;
  font-size: 14px;
  color: #999;
  margin-left: 14px;
}


.content {
  margin-top: 35px;
}

.abstract {
  background-size:cover;
  padding: 400px 8px 8px 8px;

}

/* 品牌展示 */
.brands-list {
  display: flex;
  white-space: nowrap;
  height: 120px;
  margin: 10px 0;

}
.brands-list .brand-logo {
  display: inline-block;
  width: 120px;
  height: 116px;
  margin: 8px 10px;
}
.brands-list .brand-logo .brand-logo-img{
  width: 120px;
  height: 100px;
}

.brands-table {
  margin: 10px 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.brands-table .brand-logo {
  display: inline-block;
  width: 90px;
  height: 106px;
  margin: 8px 10px;
}
.brands-table .brand-logo .brand-logo-img{
  width: 90px;
  height: 90px;
}

/* card */

.card {
  width: 100%;
  padding-top: 120px;
  background-size: cover;
  background-position: center;
}
.card .title {
  width: 100%;
  text-align: center;
  margin: 0 auto;
  font-size: 20px;
  font-weight: 800;
}
.card .desc {
  width: 100%;
  text-align: center;
  margin: 0 auto;
  font-size: 16px;

}


/* 品牌资讯 */
.brand-news-list {

}

.brand-news {
  width: 100%;
  padding: 8px 4%;
}

/* 品牌信息 */
.brand-news .brand-info {

}
/* 品牌logo */
.brand-news .brand-info .brand-logo{
  display: inline-block;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-left: 10px;
}
/* 品牌名 */
.brand-news .brand-info .brand-name{
  display: inline-block;
  font-size: 14px;
  line-height: 30px;
  margin-left: 8px;
}

/* 文章背景图 */
.brand-news .news-card .article-img{
  width: 92%;
}
/* 文章标题 */
.brand-news .news-card .news-title{
  font-size: 18px;
  font-weight: 800;
}
/* 文章副标题 */
.brand-news .news-card .news-desc{
  font-size: 14px;
  color: #999;
}

