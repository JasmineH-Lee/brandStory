/* pages/brandDetail/brandDetail.wxss */
.brand-detail {

}

.brand-detail .brand-logo {
  width: 100%;
  height: 400rpx;
}
.brand-detail .brand-text {
  padding: 10rpx 40rpx;
}
.brand-detail .brand-text .title{
  /* margin-left: 40rpx; */
  font-size: 64rpx;
  font-weight: 800;
}
.brand-detail .brand-text .brand-info {
  border-bottom:1rpx dashed #cacaca;
  padding:20rpx 0;
}
.brand-detail .brand-text .brand-info .info-list {
  
}
.brand-detail .brand-text .brand-info .info-list .info-label {
  /* margin-left: 40rpx; */
  display: inline-block;
  width: 150rpx;
  text-align: left;
  font-size: 30rpx;
}
.brand-detail .brand-text .brand-info .info-list .info-text {
  display: inline-block;
  margin-left: 5rpx;
  font-size: 30rpx;
}
.brand-detail .brand-text .brand-detail-info {
  height:66rpx;
  border-bottom:1rpx dashed #cacaca;
  padding:10rpx 0;
}
.brand-detail .brand-text .brand-detail-info .title{
  font-size: 40rpx;
  font-weight:500;
}
.brand-detail .brand-text .brand-detail-info .tip{
  font-size: 20rpx;
  font-weight: 200;
  float: right;
  color: #cacaca;
  line-height: 66rpx;
}
.brand-detail .brand-text .good {
  padding: 20rpx;
  border-bottom: 1rpx dashed #ccc;
  margin: 50rpx 0;
}
.brand-detail .brand-text .goods .good-img{
  width: 100%;
  height: 600rpx;
}
.brand-detail .brand-text .goods .good-name {
  display: block;
  margin: 0 auto;
  font-size: 28rpx;
  font-weight: 400;
  text-align: center;
}